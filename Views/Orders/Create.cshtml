<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                Check PizzaID for selecting a Pizza :

                <select class="form-control" id="name" name="name">
